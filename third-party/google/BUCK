    ('googletest/googlemock/include', '**/*.h'),
  ]),
  platform_linker_flags = [
    ('android', []),
    ('', ['-pthread']),
  ],
  exported_platform_linker_flags = [
    ('android', []),
    ('', ['-pthread']),
